<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="40pt"
    android:paddingTop="20pt"
    android:paddingRight="40pt"
    android:paddingBottom="20pt"
    app:bl_solid_color="@color/color_backdrop_white"
    tools:viewBindingIgnore="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10pt"
        android:layout_marginTop="20pt"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_order_recommend_namne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="40pt"
                android:textColor="@color/color_text_color_primaryvariant"
                tools:text="名字" />

            <TextView
                android:id="@+id/tv_item_order_recommend_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30pt"
                android:textColor="@color/color_text_color_primaryvariant"
                android:textStyle="bold"
                android:textSize="40pt"
                tools:text="年龄" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_item_order_recommend_info"
            android:layout_width="wrap_content"
            android:layout_marginTop="10pt"
            android:layout_height="wrap_content"
            android:textColor="#999999"
            android:textSize="32pt"
            tools:text="信息" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10pt"
            android:id="@+id/item_yuesao_content"
            android:layout_height="wrap_content">

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="10pt"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_item_order_recommend_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_dark_red_3"
                android:textSize="40pt"
                tools:text="价格" />
            <TextView
                android:id="@+id/tv_item_order_recommend_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_dark_red_3"
                android:textSize="32pt"
                android:layout_marginLeft="10pt"
                tools:text="天" />
        </LinearLayout>
    </LinearLayout>

  <LinearLayout
      android:layout_width="wrap_content"
      android:orientation="vertical"
      android:layout_gravity="right"
      android:layout_marginRight="270pt"
      android:layout_height="match_parent">
      <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
          android:id="@+id/item_yuesao3"
          android:layout_width="150pt"
          android:gravity="center"
          android:background="#EFEFEF"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:text="订单"
          android:textSize="30pt">

      </com.xiuxiu.confinement_nurse.ui.base.view.XTextView>


      <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
          android:id="@+id/item_yuesao4"
          android:layout_weight="1"
          android:layout_width="150pt"
          android:layout_marginTop="10pt"
          android:layout_height="0dp"
          android:gravity="center"
          android:background="#EFEFEF"
          android:text="档期"
          android:textSize="30pt">

      </com.xiuxiu.confinement_nurse.ui.base.view.XTextView>

      <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
          android:id="@+id/item_yuesao2"
          android:layout_width="150pt"
          android:gravity="center" android:layout_weight="1"
          android:layout_height="0dp"
          android:padding="0pt"
          android:background="#EFEFEF"
          android:layout_marginTop="10pt"
          android:text="报价"
          android:textSize="30pt">

      </com.xiuxiu.confinement_nurse.ui.base.view.XTextView>
  </LinearLayout>

    <com.xiuxiu.confinement_nurse.ui.base.view.XImageView
        android:id="@+id/item_yuesao_avatar"
        android:layout_width="250pt"
        android:layout_height="250pt"
        android:layout_gravity="right|center_vertical"
        app:bl_solid_color="#EFEFEF"
        tools:background="#EFEFEF" />
</FrameLayout>