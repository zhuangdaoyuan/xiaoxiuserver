<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="739pt"
        android:layout_height="wrap_content"
        android:layout_marginLeft="46pt"
        android:layout_marginTop="58pt"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
                android:id="@+id/tv_layout_other_experience_title"
                android:layout_width="200pt"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:maxWidth="240pt"
                android:textSize="35pt"
                tools:text="月嫂服务:"/>

            <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
                android:id="@+id/tv_layout_other_experience_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#666666"
                android:textSize="35pt"
                tools:text="XXXXXXXX"/>
        </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_marginTop="20pt"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="200pt"
              android:layout_height="wrap_content"
              android:id="@+id/tv_layout_other_experience_mechanism"
              android:textColor="#000000"
              android:textSize="35pt"
              tools:text="机构"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/tv_layout_other_experience_area"
              android:textColor="#19CDEE"
              android:textSize="35pt"
              tools:text="地区"/>
      </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_marginTop="58pt"
        android:layout_marginRight="46pt"
        android:layout_marginBottom="35pt"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单胎"
            android:id="@+id/tv_layout_other_experience_type"
            android:textColor="#19CDEE"
            android:textSize="35pt"/>

        <ImageView

            android:layout_width="112pt"
            android:id="@+id/iv_layout_other_experience"
            android:layout_height="75pt"
            android:visibility="gone"
            android:layout_marginTop="23pt"/>
    </LinearLayout>


</FrameLayout>