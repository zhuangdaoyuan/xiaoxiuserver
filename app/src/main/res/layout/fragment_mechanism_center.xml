<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#EFEFEF"
    android:id="@+id/fragment_mechanism_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">
    <View
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="732pt"
        android:background="@color/color_EC706D_a100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.xiuxiu.confinement_nurse.ui.base.view.XImageView
        android:layout_width="300pt"
        android:layout_height="300pt"
        android:layout_marginLeft="108pt"
        android:layout_marginTop="78pt"
        android:id="@+id/fragment_mechanism_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:bl_shape="oval"
        app:bl_solid_color="#EFEFEF"
        app:layout_constraintTop_toTopOf="parent">
    </com.xiuxiu.confinement_nurse.ui.base.view.XImageView>


    <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
        android:id="@+id/fragment_mechanism_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="46pt"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="108pt"
        android:layout_marginTop="78pt"
        android:textColor="@color/color_text_color_white"
        android:textSize="58pt"
        android:lines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        tools:text="ssssssssssssssssssssssssssssssss/nsssssssss"
        app:layout_constraintLeft_toRightOf="@id/fragment_mechanism_avatar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />



    <com.xiuxiu.confinement_nurse.ui.base.view.XView
        android:id="@+id/v_fragment_center_bg"
        android:layout_width="match_parent"
        android:layout_height="173pt"
        android:layout_marginLeft="46pt"
        android:layout_marginRight="46pt"
        app:bl_corners_radius="14pt"
        app:bl_solid_color="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bg" />

    <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40pt"
        android:text="订单"
        android:textColor="#000000"
        android:textSize="49pt"
        app:layout_constraintBottom_toBottomOf="@id/v_fragment_center_bg"
        app:layout_constraintLeft_toLeftOf="@id/v_fragment_center_bg"
        app:layout_constraintTop_toTopOf="@id/v_fragment_center_bg" />


    <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
        android:id="@+id/tv_fragment_center_order_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="105pt"
        android:gravity="right"
        android:text=""
        android:textColor="#999999"
        android:textSize="46pt"
        app:layout_constraintBottom_toBottomOf="@id/v_fragment_center_bg"
        app:layout_constraintRight_toRightOf="@id/v_fragment_center_bg"
        app:layout_constraintTop_toTopOf="@id/v_fragment_center_bg" />

    <com.xiuxiu.confinement_nurse.ui.base.view.XImageView
        android:layout_width="19pt"
        android:layout_height="36pt"
        android:layout_marginRight="46pt"
        android:background="@drawable/icon_right"
        app:layout_constraintBottom_toBottomOf="@id/v_fragment_center_bg"
        app:layout_constraintRight_toRightOf="@id/v_fragment_center_bg"
        app:layout_constraintTop_toTopOf="@id/v_fragment_center_bg">

    </com.xiuxiu.confinement_nurse.ui.base.view.XImageView>




    <com.xiuxiu.confinement_nurse.ui.base.view.XView
        android:id="@+id/v_fragment_center_list"
        android:layout_width="match_parent"
        android:layout_height="173pt"
        android:layout_marginTop="40pt"
        android:layout_marginLeft="46pt"
        android:layout_marginRight="46pt"
        app:bl_corners_radius="14pt"
        app:bl_solid_color="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_fragment_center_bg" />

    <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40pt"
        android:text="系统设置"
        android:textColor="#000000"
        android:textSize="49pt"
        app:layout_constraintBottom_toBottomOf="@id/v_fragment_center_list"
        app:layout_constraintLeft_toLeftOf="@id/v_fragment_center_list"
        app:layout_constraintTop_toTopOf="@id/v_fragment_center_list" />

    <com.xiuxiu.confinement_nurse.ui.base.view.XImageView
        android:layout_width="19pt"
        android:layout_height="36pt"
        android:layout_marginRight="46pt"
        android:background="@drawable/icon_right"
        app:layout_constraintBottom_toBottomOf="@id/v_fragment_center_list"
        app:layout_constraintRight_toRightOf="@id/v_fragment_center_list"
        app:layout_constraintTop_toTopOf="@id/v_fragment_center_list">

    </com.xiuxiu.confinement_nurse.ui.base.view.XImageView>

    <com.xiuxiu.confinement_nurse.ui.base.view.XImageView
        android:layout_width="50pt"
        android:layout_height="50pt"
        android:layout_marginTop="70pt"
        android:id="@+id/fragment_center_set"
        android:layout_marginRight="78pt"
        android:visibility="gone"
        android:background="@drawable/icon_set"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>