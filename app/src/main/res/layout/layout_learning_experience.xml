<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_layout_learning_subject"
        android:layout_width="197pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="42pt"
        android:layout_marginBottom="40pt"
        android:gravity="center"
        android:text="科目"
        android:textColor="#888888"
        android:textSize="35pt"/>

    <TextView
        android:id="@+id/tv_layout_learning_level"
        android:layout_width="197pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="42pt"
        android:layout_marginBottom="40pt"

        android:gravity="center"
        android:text="级别"
        android:textColor="#888888"
        android:textSize="35pt"/>

    <TextView
        android:id="@+id/tv_layout_learning_school"
        android:layout_width="197pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="42pt"
        android:layout_marginBottom="40pt"

        android:gravity="center"
        android:text="学校/机构"
        android:textColor="#888888"
        android:textSize="35pt"/>

    <FrameLayout
        android:layout_width="197pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="42pt"
        android:layout_marginBottom="40pt"
        android:gravity="center"
        android:text="证书照片"
        android:textColor="#888888"
        android:textSize="35pt">

        <ImageView
            android:id="@+id/iv_layout_learning_photo"
            android:layout_width="144pt"
            android:layout_height="90pt"
            android:layout_gravity="center"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tv_layout_learning_time"
        android:layout_width="197pt"
        android:layout_height="wrap_content"
        android:layout_marginTop="42pt"
        android:layout_marginBottom="40pt"
        android:gravity="center"
        android:text="时间"
        android:textColor="#888888"
        android:textSize="35pt"/>
</LinearLayout>