<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:bl_corners_radius="63pt"
    app:bl_solid_color="#E6E6E6">


    <ImageView
        android:id="@+id/iv_layout_edit_left_icon"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="46pt"
        android:scaleType="fitCenter"
        tools:background="#000000"
        tools:src="@drawable/icon_phone" />

    <EditText
        android:id="@+id/tv_layout_edit_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="30pt"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingLeft="30pt"
        android:textColor="#000000"
        android:textColorHint="#B3B3B3"
        android:textCursorDrawable="@drawable/color_cursor"
        android:textSize="40pt" />


    <ImageView
        android:id="@+id/iv_layout_edit_right_icon"
        android:layout_width="50pt"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="49pt"
        android:scaleType="fitCenter"
        tools:background="#000000" />
</merge>