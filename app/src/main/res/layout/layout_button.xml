<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="32pt"
        android:id="@+id/layout_button"
        app:bl_solid_color="#F6F6F6"
        android:gravity="center"
        android:singleLine="true"
        app:bl_stroke_width="1pt"
        app:bl_selected_stroke_color="#7858EE"
        app:bl_unSelected_stroke_color="#F6F6F6"
        app:bl_selected_textColor="#7858EE"
        app:bl_unSelected_textColor="#666666"
        app:bl_corners_radius="14pt"
        tools:text="ssssss"
        android:minHeight="0dp"
        android:paddingBottom="32pt"
        android:textSize="40pt">

    </com.xiuxiu.confinement_nurse.ui.base.view.XTextView>

    <ImageView
        android:layout_width="25pt"
        android:background="@drawable/icon_x"
        android:layout_gravity="right"
        android:layout_marginRight="15pt"
        android:id="@+id/layout_image"
        tools:visibility="visible"
        android:visibility="gone"
        android:layout_marginTop="15pt"
        android:layout_height="25pt">
    </ImageView>
</FrameLayout>