<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="139pt"
        android:background="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/fl_activity_my_back"
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:layout_marginLeft="46pt"
            android:layout_marginTop="53pt"
            android:onClick="onBack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.xiuxiu.confinement_nurse.ui.base.view.XImageView
                android:layout_width="27pt"
                android:layout_height="46pt"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_left"
                android:onClick="onBack"
                app:layout_constraintLeft_toLeftOf="parent" />
        </FrameLayout>

        <com.xiuxiu.confinement_nurse.ui.base.view.XTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="关于我们"
            android:textColor="#000000"
            android:textSize="58pt" />
    </FrameLayout>

    <ImageView
        android:layout_width="184pt"
        android:layout_height="184pt"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="144pt"
        android:background="@drawable/ic_launcher">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:text="@string/app_name"
        android:layout_gravity="center_horizontal"
        android:textColor="#000000"
        android:textSize="46pt"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:textColor="#333333"
        android:layout_gravity="center_horizontal"
        android:text="手机自助接私单平台"
        android:textSize="40pt">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="50pt"
        android:id="@+id/phone_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="40pt"
            android:layout_height="wrap_content"
            android:text="联系电话："></TextView>

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="40pt"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        android:id="@+id/mailbox_content"
        android:layout_marginTop="20pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="40pt"
            android:layout_height="wrap_content"
            android:text="电子邮箱："></TextView>

        <TextView
            android:id="@+id/mailbox"
            android:textColor="#333333"
            android:textSize="40pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/qq_content"
        android:layout_height="wrap_content"         android:layout_marginTop="20pt"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="40pt"
            android:text="客服QQ："></TextView>

        <TextView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="40pt"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:id="@+id/wx_content"
        android:layout_height="wrap_content"         android:layout_marginTop="20pt"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="#333333"
            android:textSize="40pt"
            android:layout_height="wrap_content"
            android:text="客服微信："></TextView>

        <TextView
            android:id="@+id/wx"
            android:textColor="#333333"
            android:textSize="40pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom"
        android:visibility="gone"
        android:gravity="bottom"
        android:paddingBottom="100pt"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》"
            android:textSize="40pt"
            android:id="@+id/text_user"
            android:textColor="#EC706D"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:textSize="40pt"
            android:layout_height="wrap_content"
            android:text="和"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40pt"
            android:id="@+id/text_privacy"
            android:text="《隐私政策协议》"
            android:textColor="#EC706D"></TextView>
    </LinearLayout>

</LinearLayout>